<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.kct.prototype.Home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/companyname"
        android:text="@string/companyname"
        android:textColor="@color/black"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/menulist"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menulist"
        android:background="@color/brown"
        android:onClick="sauthentication"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:id="@+id/supervisorlogo"
            android:layout_marginLeft="20dp"
            android:src="@drawable/supervisor"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/supervisor"
            android:layout_marginLeft="20dp"
            android:text="Supervisor"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/supervisorlogo"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>
